{% for entity in value %}
    {% set href = path(key|replace({'pages':'site'}) ~ '/page', {'alias': entity.alias|replace({'index':''})}) %}
    <!-- ITEM -->
    <div class="col-md-3">
        <div class="restaurant_item lager-thumbs">

            <div class="img">
                <a href="{{ href }}">
                    {% set image = images[entity.image_rr_id] %}
                    <img src="{{ image.path }}" alt="{{ image.alt }}" title="{{ image.title }}">
                </a>
            </div>

            <div class="text">
                <div><a href="{{ href }}">{{ entity.name_rr }}</a></div>
                <p class="desc">{{ entity.text_rr|raw }}</p>
            </div>

        </div>
    </div>
{% endfor %}