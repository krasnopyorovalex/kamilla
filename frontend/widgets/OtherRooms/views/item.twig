<!-- ITEM -->
<div class="col-lg-12">
    <div class="room-compare_item">
        <div class="img">
            <a href="{{ model.getLink() }}"><img src="{{ model.imageMainPreview.path }}" alt="{{ model.imageMainPreview.alt }}" title="{{ model.imageMainPreview.title }}"></a>
        </div>

        <div class="text">
            <div class="title"><a href="{{ model.getLink() }}">{{ model.name }}</a></div>

            {% if model.roomsAttributesVias %}
                <ul>
                    {% for item in model.roomsAttributesVias %}
                        <li>{{ model.getNameAttributeById(item.attribute_id) }}: {{ item.value }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <a href="{{ model.getLink() }}" class="awe-btn awe-btn-default">Подробнее</a>

        </div>

    </div>
</div>
<!-- END / ITEM -->