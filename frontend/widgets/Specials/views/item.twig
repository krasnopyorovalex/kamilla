<!-- ITEM -->
<div class="col-md-4 col-xs-6">
    <div class="activiti_item">
        <div class="img">
            <a href="{{ model.getLink() }}">
                <img src="{{ model.imagePreview.path }}" alt="{{ model.imagePreview.alt }}" title="{{ model.imagePreview.title }}">
            </a>
            {% if model.is_finished %}
                <img src="/images/icon_akciya_zavershena.png" class="is__finished" alt="Акция завершена">
            {% endif %}
        </div>
        <div class="text">
            <div class="title"><a href="{{ model.getLink() }}">{{ model.name }}</a></div>
            {{ model.text_preview|raw }}
            <a href="{{ model.getLink() }}" class="view-more">Читать далее <i class="fa fa-chevron-right"></i></a>
        </div>
    </div>
</div>
<!-- END / ITEM -->