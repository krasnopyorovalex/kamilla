<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <url>
        <loc>https://{{ app.request.hostName }}</loc>
        <lastmod>{{ "now"| date("Y-m-d\\TH:i:sP") }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
    {% if pages %}
        {% for item in pages %}
            <url>
                <loc>https://{{ app.request.hostName }}/{{ item.alias }}</loc>
                <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
                <changefreq>daily</changefreq>
                <priority>0.9</priority>
            </url>
        {% endfor %}
    {% endif %}
    {% if news %}
        {% for item in news %}
            <url>
                <loc>https://{{ app.request.hostName }}/news/{{ item.alias }}</loc>
                <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
                <changefreq>daily</changefreq>
                <priority>0.9</priority>
            </url>
        {% endfor %}
    {% endif %}
    {% if articles %}
        {% for item in articles %}
            <url>
                <loc>https://{{ app.request.hostName }}/articles/{{ item.alias }}</loc>
                <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
                <changefreq>daily</changefreq>
                <priority>0.9</priority>
            </url>
        {% endfor %}
    {% endif %}
    {% if specials %}
        {% for item in specials %}
            <url>
                <loc>https://{{ app.request.hostName }}/specials/{{ item.alias }}</loc>
                <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
                <changefreq>daily</changefreq>
                <priority>0.9</priority>
            </url>
        {% endfor %}
    {% endif %}
    {% if rooms %}
        {% for item in rooms %}
            <url>
                <loc>https://{{ app.request.hostName }}/{{ app.params['catalogAlias'] }}/{{ item.alias }}</loc>
                <lastmod>{{ item.updated_at| date("Y-m-d\\TH:i:sP") }}</lastmod>
                <changefreq>daily</changefreq>
                <priority>0.9</priority>
            </url>
        {% endfor %}
    {% endif %}
</urlset>
